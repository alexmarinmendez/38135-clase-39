<div>
    <h2>Formulario</h2>
    <form action="/users/html-onwire" method="post">
        Nombre: <input type="text" name="nombre" id="nombre">
        Apellido: <input type="text" name="apellido" id="apellido">
        DNI: <input type="number" name="dni" id="dni">
        <input type="submit" value="REGISTRAR">
    </form>
    <h2>Tabla de datos</h2>
    {{#if users.length}}
        <table>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>DNI</th>
            </tr>
            {{#each users}}
            <tr>
                <td>{{this.nombre}}</td>
                <td>{{this.apellido}}</td>
                <td>{{this.dni}}</td>
            </tr>
            {{/each}}
        </table>
    {{else}}
        <h4>No se encontraron usuarios</h4>
    {{/if}}
</div>